model Client {
  id          Int          @id @default(autoincrement())
  firstName   String
  lastName    String
  documentId  String       @unique
  email       String       @unique
  reservations Reservation[]
}

model Service {
  id          Int          @id @default(autoincrement())
  name        String
  reservations Reservation[]
}

model Reservation {
  id          Int          @id @default(autoincrement())
  date        DateTime
  clientId    Int
  serviceId   Int
  client      Client       @relation(fields: [clientId], references: [id])
  service     Service      @relation(fields: [serviceId], references: [id])
}
